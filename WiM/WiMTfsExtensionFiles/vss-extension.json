{
        "manifestVersion": 1,
        "id": "firstExtensionForWiM",
        "version": "0.0.2",
        "name": "Workitem Manager beta",
        "publisher": "KaroyBandi",
		"description": "A hub for adding multiple tasks at once",
		"public": false,
		"categories": ["Plan and track"],
        "targets": [
            {
                "id": "Microsoft.VisualStudio.Services"
                }
            ],
        "icons": {
            "default": "images/logoHierarchical.png"
         },
        "contributions": [
            {
                "id": "KaroyBandi.HelloWorld",
                "type": "ms.vss-web.hub",
                "description": "Adds a 'WiM beta hub to the Work hub group.",
                "targets": [
                    "ms.vss-work-web.work-hub-group"
                    ],
                "properties": {
                    "name": "WiM beta",
                    "order": 99,
                    "uri": "hello-world.html"
                }
            }
        ],
        "scopes": [
            "vso.work"
        ],
        "files": [
            {
                "path": "hello-world.html", 
				"addressable": true
            },
            {
                "path": "node_modules/vss-web-extension-sdk/lib", 
				"addressable": true
            },
            {
                "path": "images/logoHierarchical.png", 
				"addressable": true
            }
        ]
    }